@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @{
        await Html.RenderPartialAsync("_LoginStyle");
    }
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Login_v1/images/img-01.png" alt="IMG">
                </div>
                @*    <--------------------------------loginForm----------------------------------------> *@
                <form id="loginform" class="login100-form validate-form">
                    <span class="login100-form-title">
                        E-Commerce
                    </span>
                    <div class="wrap-input100 validate-input" data-validate="Valid Username is required">
                        <input class="input100" id="txtUserName" type="text" name="userName" placeholder="Username">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input class="input100" id="txtPassword" type="password" name="password" placeholder="Password" onchange="Login()">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" onclick="Login()">
                            เข้าสู่ระบบ
                        </button>
                    </div>
                    <div class="text-center p-t-12">
                        <span class="txt1">
                            ลืม
                        </span>
                        <a class="txt1" href="#">
                            รหัสผ่าน?
                        </a>
                    </div>
                    <div class="text-center p-t-136">
                        <a class="txt1" onclick="changeToRegisterForm()" style="cursor:pointer">
                            สร้างบัญชีผู้ใช้งานใหม่
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                </form>
             @*    <--------------------------------registerForm----------------------------------------> *@
                <form id="registerform" class="login100-form validate-form" style="display:none">
                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <input class="input100" type="text" name="username" placeholder="บัญชีผู้ใช้งาน" autocomplete="off">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input class="input100" type="password" name="password" placeholder="รหัสผ่าน" autocomplete="off">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <input class="input100" type="text" name="fullname" placeholder="ชื่อ-สกุล" autocomplete="off">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <input class="input100" type="text" name="email" placeholder="อีเมลล์" autocomplete="off">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            ลงทะเบียน
                        </button>
                    </div>
                    <div class="text-center p-t-136">
                        <a class="txt1" onclick="changeToLoginForm()" style="cursor:pointer">
                            กลับสู่หน้าลงทะเบียน
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @{
        await Html.RenderPartialAsync("_LoginScript");
    }
</body>
</html>
