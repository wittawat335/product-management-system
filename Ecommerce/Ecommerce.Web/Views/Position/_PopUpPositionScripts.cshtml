@using Ecommerce.Web.Commons;
@using Ecommerce.Web.Extenions.Class;
@using Ecommerce.Web.Models.Position;
@using Microsoft.Extensions.Options;
@model PositionViewModel;

<script>
    var action = '@Model.Action';
    $(document).ready(function () {
        checkAction();
        formValidate();
    });
    function checkAction() {
        switch (action) {
            case '@Constants.Action.View': {
                setReadOnlyByDiv('frmDetail', true);
                $('#btnSave').hide();
                break;
            }
            case '@Constants.Action.Add':
                $('#Status').val('A');
                break;
            case '@Constants.Action.Update':
                setReadOnly('PositionId', true);
                break;
        }
    }

    function formValidate() {
        $.validator.setDefaults({
            submitHandler: function () {
                if (action == '@Constants.Action.Add') Insert('frmDetail', baseApiUrl + 'Position');
                if (action == '@Constants.Action.Update') Update('frmDetail', baseApiUrl + 'Position');
            }
        });
        checkValidate();
    }

    function checkValidate() {
        $('#frmDetail').validate({
            rules: {
                PositionId: {
                    required: true,
                    minlength: 3
                },
                PositionName: {
                    required: true,
                    minlength: 3
                },
                MenuDefault: {
                    required: true
                },
                Status: {
                    required: true
                }
            },
            messages: {
                PositionId: {
                    required: "กรุณาระบุรหัสตำแหน่ง",
                },
                PositionName: {
                    required: "กรุณาระบุชื่อตำแหน่ง",
                },
                MenuDefault: {
                    required: "กรุณาเลือกสถานะ",
                },
                Status: {
                    required: "กรุณาเลือกสถานะ",
                }
            },
            errorElement: 'span',
            errorPlacement: function (error, element) {
                error.addClass('invalid-feedback');
                element.closest('.form-group').append(error);
            },
            highlight: function (element, errorClass, validClass) {
                $(element).addClass('is-invalid');
            },
            unhighlight: function (element, errorClass, validClass) {
                $(element).removeClass('is-invalid');
                $(element).addClass('is-valid');
            }
        });
    }
</script>


